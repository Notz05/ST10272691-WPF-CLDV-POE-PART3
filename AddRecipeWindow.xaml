<Window x:Class="RecipeApplicationWPF.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Recipe Name:"/>
            <TextBox Name="RecipeNameTextBox"/>
            <Button Content="Add Recipe" Click="AddRecipe_Click"/>
        </StackPanel>
    </Grid>
</Window>
