<Window x:Class="RecipeApplicationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplicationWPF"
        mc:Ignorable="d"
        Title="Recipe Application" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe Application" FontSize="24" FontWeight="Bold" Margin="10"/>
            <Button Content="Add Recipe" Click="AddRecipe_Click" Margin="10"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Margin="10"/>
            <Button Content="Add Step" Click="AddStep_Click" Margin="10"/>
            <Button Content="Display Recipes" Click="DisplayRecipes_Click" Margin="10"/>
            <Button Content="Display Recipe" Click="DisplayRecipe_Click" Margin="10"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
